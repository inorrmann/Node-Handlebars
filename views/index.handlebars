<div class="jumbotron sticky-top text-center">
    <h1 class="display-3 font-weight-bold">Task Manager</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 class="text-center mb-4">Items to Complete </h3>
            <hr>

            {{#each}}
            <div class="row mb-3">
                <div class="col-9">
                    <p class="d-inline">{{id}}</p>
                    <span>&nbsp;</span>
                    <p class="d-inline">{{name}}</p>
                </div>
                <div class="col-3">
                        <button type="submit" class="rounded bg-light"><i class="far fa-check-circle"></i></i><span>&nbsp;</span> Done!</button>
                </div>
            </div>
            {{/each}}

        </div>

        <div class="col-6">
            <h3 class="text-center mb-4">Items Completed </h3>
            <hr>

            {{#each}}
            <div class="row mb-4">
                <div class="col-12">
                    <p class="d-inline">{{id}}</p>
                    <span>&nbsp;</span>
                    <p class="d-inline">{{name}}</p>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

    <footer class="footer">
        <div class="col-12">
            <form id="createBurger" class="mx-auto">
                <hr>
                <div class="form-group mx-auto">
                    <label class="text-center mb-0">Enter a burger you would like to eat</label>
                    <input type="text" class="form-control form-control-lg" name="burger"></input>
                </div>
                <div class="form-group mx-auto text-center">

                    <button type="submit" class="btn btn-secondary ">Submit</button>
                </div>
            </form>
        </div>
    </footer>

</div>